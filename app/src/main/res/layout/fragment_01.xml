<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/titlebar"
        layout="@layout/title_bar" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        style="@style/one_title"
        android:text="如果你恰好符合以下条件，欢迎拥抱Kotlin"
        android:id="@+id/one1TV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlebar"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/two1TV"
        style="@style/two_title"
        app:layout_constraintTop_toBottomOf="@id/one1TV"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="一、公司项目中已开始使用Kotlin语言"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/two2TV"
        style="@style/two_title"
        app:layout_constraintTop_toBottomOf="@id/two1TV"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="二、恰好你不会/不熟，正悲痛万分中"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/two3TV"
        style="@style/two_title"
        app:layout_constraintTop_toBottomOf="@id/two2TV"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="三、渴望提升工作效率，少加班多陪女朋友"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/two04TV"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="128dp"
        style="@style/one_title"
        android:text="学了本堂课，让你出门就会敲Kotlin代码！"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>